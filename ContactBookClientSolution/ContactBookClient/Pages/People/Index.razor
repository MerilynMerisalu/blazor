@page "/people"
@using ContactBookClient.DTO
@using ContactBookClient.Services
@inject PersonService service
<h3>People</h3>
<h1>Index</h1>
<p>
    <a href="/people/create">Create new</a>
</p>
@if (People == null)
{
    <p><i>Loading ...</i></p>
}
else
{
   
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in People)
            {
                <tr>
                    <td>@person!.FirstName</td>
                    <td>@person.LastName</td>
                    <td>
                        <a href="@($"/people/details/{person.PersonId}")">Details</a>
                        <a href="@($"/people/edit/{person.PersonId}")">Edit</a>
                        <a href="@($"/people/delete/{person.PersonId}")">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
}
@code {
    IEnumerable<Person?>? People = new List<Person>();
    protected override async Task OnInitializedAsync()
    {        
        People = (await service.GetPeople()).ToList();
        
    }
}
