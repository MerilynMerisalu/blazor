@page "/people/index"
@using ContactBookClient.Entities
@using ContactBookClient.Services
@inject PersonService service
<PageTitle>People Index</PageTitle>
<h1>People Index</h1>
<p>
    <a href="/people/create">Create New</a>
</p>
@if (People == null)
{
    <p><i>Loading ...</i></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in People)
            {
                <tr>
                    <td>
                        @p!.FirstName
                    </td>
                    <td>
                        @p!.LastName
                    </td>
                    <td>
                       <a href=@($"/people/edit/{p.PersonId}")>Edit</a> |
                       <a href=@($"/people/details/{p.PersonId}")>Details</a> |
                       <a href=@($"/people/delete/{p.PersonId}")>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    IEnumerable<Person?>? People;

    protected override async Task OnInitializedAsync()
    {
        People = (await service.GetPeopleAsync()).ToList();
    }
}
