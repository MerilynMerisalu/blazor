@page "/people/index"
@using ContactBookClient.Entities
@using ContactBookClient.Services
@inject PersonService service
<PageTitle>People Index</PageTitle>
<h3>People Index</h3>
@if (People == null)
{
    <p><i>Loading ...</i></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in People)
            {
                <tr>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                       <a href=@($"/people/edit/{item.PersonId}")>Edit</a> |
                       <a href=@($"/people/details/{item.PersonId}")>Details</a> |
                        <a href=@($"/people/delete/{item.PersonId}")>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    IEnumerable<Person?>? People;

    protected override async Task OnInitializedAsync()
    {
        People = (await service.GetPeopleAsync()).ToList();
    }
}
